{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": ["src/*"],
      "@vadmire/*": ["packages/*"],
      "@flypeng/tool/browser": ["node_modules/@flypeng/tool/dist/browser"],
      "@flypeng/tool/node": ["node_modules/@flypeng/tool/dist/node"]
    },
    "types": ["unplugin-icons/types/vue", "naive-ui/volar"]
  },
  "include": ["src/**/*", "mock/**/*", "packages/**/*", "auto-imports.d.ts", "components.d.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
